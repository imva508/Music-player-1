<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition app:constraintSetEnd="@id/end01" app:constraintSetStart="@id/start01" app:duration="3000"
    app:interpolator="anticipate">
        <OnSwipe app:dragDirection="dragUp" app:touchAnchorId="@id/themeView" app:touchAnchorSide="bottom"/>

        <KeyFrameSet>
            <KeyPosition app:target="@id/mainCardView" app:curveFit="spline" app:pathMotionArc="flip"

                          app:keyPositionType="deltaRelative"
                         app:percentWidth="0.7" app:percentX="1.0"
                         app:framePosition="25"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start01">

        <Constraint
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/themeView">
        </Constraint>


        <Constraint
                android:layout_width="0dp"
                android:layout_margin="20dp"
                android:id="@+id/mainCardView"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="20dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/themeView"
                app:layout_constraintBottom_toBottomOf="@+id/themeView">
            <CustomAttribute app:attributeName="radius" app:customDimension="15dp"/>

        </Constraint>

        <Constraint
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:layout_margin="20dp"
                android:paddingStart="16dp"
                android:id="@+id/mainSearchBar"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="#e3e9fc"
                android:background="@drawable/search_bar_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


    </ConstraintSet>


    <ConstraintSet android:id="@+id/end01">

        <Constraint
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/themeView">
        </Constraint>


        <Constraint
                android:layout_width="60dp"
                android:layout_margin="20dp"
                android:id="@+id/mainCardView"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="20dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <CustomAttribute app:attributeName="radius" app:customDimension="30dp"/>

        </Constraint>

        <Constraint
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:layout_margin="20dp"
                android:paddingStart="16dp"
                android:id="@+id/mainSearchBar"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="#e3e9fc"
                android:background="@drawable/search_bar_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </ConstraintSet>


</MotionScene>